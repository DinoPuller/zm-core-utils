use strict;
use Getopt::Long;
use NetAddr::IP;

my @interfaces = ();
open INTS, "/sbin/ip addr | grep inet |";
foreach (<INTS>) {
  chomp;
  if ($_ =~ /scope link/) {
    next;
  }
  if ($_ =~ /inet6/) {
    s/.*inet6 //;
    s/ brd.*//;
	s/ scope.*//;
  } else {
    s/.*inet //;
    s/ brd.*//;
	s/ scope.*//;
  }
  next if /^$/;
  my $ip = new NetAddr::IP "$_";
  my $mask = $ip->mask();
  push @interfaces, "addr:".$_." Mask:".$mask;
}
close INTS;
my %seen;
if (scalar @interfaces) {
  foreach (@interfaces) {
    $seen{$_}++;
    print "$_\n" unless ($seen{$_} > 1);
  }
}
